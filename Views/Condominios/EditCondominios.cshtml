@{
    ViewData["Title"] = "Edit Condominios";
}

@Html.Partial("SideBar")

<link rel="stylesheet" href="/css/Style.css">
<body>
    <div class="text-center">
        <h1 class="display-4" style="color: darkblue">Editar Condominios</h1>
    </div>
    <div class="login-wrap">

        <div class="login-html">

            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Actualizar Condominio</label>
            @foreach (var @item in @ViewBag.Condominios)
            {
                <form asp-controller="Condominios" asp-action="SaveEditCondominio" method="post" enctype="multipart/form-data">
                    <div class="login-form">
                        <div class="sign-in-htm">
                            <div class="group">
                                <label for="Nombre" class="label">ID Condominio</label>
                                <input id="Nombre" type="text" name="txtId" class="input" value="@item.Id" readonly>
                            </div>
                            <div class="group">
                                <label for="Nombre" class="label">Nombre</label>
                                <input id="Nombre" type="text" name="txtNombre" class="input" value="@item.Name" required>
                            </div>
                            <div class="group">
                                <label for="Direccion" class="label">Dirección</label>
                                <input id="Direccion" type="text" name="txtDireccion" class="input" value="@item.Address" required>
                            </div>
                            <div class="group">
                                <label for="Telefono" class="label">Teléfono</label>
                                <input id="Telefono" type="text" name="txtPhone" class="input" value="@item.Phone" required>
                            </div>

                            <div class="form-group foto" id="foto-field">
                                <label for="Telefono" class="label">Logo</label>
                                <input type="file" class="form-control" id="photo" name="photo" required />
                            </div>
                            <br>
                            <div class="group">
                                <input type="submit" class="button" value="Actualizar Condominio"> 
                                <br>
                                <a asp-action="GetCondominios" class="btn btn-dark">Regresar a la Lista de Usuario</a>
                            </div>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</body>