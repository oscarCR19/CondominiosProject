@{
    ViewData["Title"] = "Get Condominios";
}

<link rel="stylesheet" href="/css/Style.css">
<body>
    <div class="text-center">
        <h1 class="display-4" style="color: darkblue">Lista de Condominios</h1>
    </div>
    <div class="text-center">
        <form asp-action="mainmenu" asp-controller="MainMenu">
            <button class="btn btn-success" type="submit">Menú Principal</button>
        </form>
    </div>
    <br />
    <hr />
    <div class="text-center">
        <form asp-action="CreateCondominios" asp-controller="Condominios">
            <button class="btn btn-success" type="submit"> + Create</button>
        </form>
    </div>

    <div class="text-center">
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var @item in @ViewBag.Condominios)
                {
                <div class="col">
                    <div class="card shadow-sm" style="width:252px">
                        <div class="flex-shrink-0">
                                <img src="@item.Logo" class="card-img-top" alt="..." style="width:250px">
                        </div>

                        <div class="card-body">
                            <div style="display: none">
                                <p class="card-text"></p>
                            </div>
                                <p class="card-text">@item.Name</p>
                                <p class="card-text">@item.Address</p>
                                <p class="card-text">@item.Phone</p>

                            <div class="text-center">
                                <form asp-action="EditCondominios" asp-controller="Condominios">
                                    <button class="btn btn-primary" type="submit">Edit</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>

</body>