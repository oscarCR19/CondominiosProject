@{
    ViewData["Title"] = "Editar Casas";
}

@Html.Partial("SideBar")

<link rel="stylesheet" href="/css/Style.css">
<body>
    <div class="text-center">
        <h1 class="display-4" style="color: white">Editar Casas de Condominios</h1>
    </div>

    <br />
    <div class="login-wrap">
        <form asp-action="EditCasa" asp-controller="CasasCondominio" method="post">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Editar Casas de Condominios</label>

                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="Casa" class="label">Número de Casa</label>
                            <input id="txtCasa" type="text" name="txtCasa" class="input" required>
                        </div>

                        <div class="group">
                            <label for="IDCondominio" class="label">ID Condominio</label>
                            <input id="txtIDCondominio" type="text" name="txtIDCondominio" class="input" required>
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="Actualizar Casa">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>


