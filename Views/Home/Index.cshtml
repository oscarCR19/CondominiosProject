@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="text-center">
        <h1 class="display-4">Bienvenido</h1>
    </div>


    <div class="text-center">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


                <div class="col">
                    <div class="card shadow-sm" style="width:100px">
                        <div class="flex-shrink-0">
                            <form asp-action="GetPerson" asp-controller="CondominosPerson">
                                <button class="btn btn-success" type="submit">Lista de Persona</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm" style="width:100px">
                        <div class="flex-shrink-0">
                            <form asp-action="CreatePerson" asp-controller="CondominosPerson">
                                <button class="btn btn-success" type="submit">Crear Persona</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm" style="width:100px">
                        <div class="flex-shrink-0">
                            <form asp-action="EditPerson" asp-controller="CondominosPerson">
                                <button class="btn btn-success" type="submit">Editar Persona</button>
                            </form>
                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="card shadow-sm" style="width:150px">
                        <div class="flex-shrink-0">
                            <form asp-action="GetCondominios" asp-controller="Condominios">
                                <button class="btn btn-success" type="submit">Lista de Condominios</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm" style="width:150px">
                        <div class="flex-shrink-0">
                            <form asp-action="CreateCondominios" asp-controller="Condominios">
                                <button class="btn btn-success" type="submit">Crear Condominio</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm" style="width:150px">
                        <div class="flex-shrink-0">
                            <form asp-action="EditCondominios" asp-controller="Condominios">
                                <button class="btn btn-success" type="submit">Editar Condominio</button>
                            </form>
                        </div>
                    </div>
                </div>



                <div class="col">
                    <div class="card shadow-sm" style="width:130px">
                        <div class="flex-shrink-0">
                            <form asp-action="GetVisita" asp-controller="Visitas">
                                <button class="btn btn-success" type="submit">Lista de Visitas</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm" style="width:130px">
                        <div class="flex-shrink-0">
                            <form asp-action="CreateVisita" asp-controller="Visitas">
                                <button class="btn btn-success" type="submit">Crear Visitas</button>
                            </form>
                        </div>
                    </div>
                </div>


                <div class="col">
                    <div class="card shadow-sm" style="width:130px">
                        <div class="flex-shrink-0">
                            <form asp-action="EditVisita" asp-controller="Visitas">
                                <button class="btn btn-success" type="submit">Editar Visitas</button>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



