@{
    ViewData["Title"] = "Edit";
}

@Html.Partial("SideBar")

<link rel="stylesheet" href="/css/Style.css">
<body>
    <div class="text-center">
        <h1 class="display-4" style="color: white">Editar Personas</h1>
    </div>
    <div class="login-wrap">
        <form asp-controller="Login" asp-action="UpdatePerson">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Editar Personas</label>

                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="Cedula" class="label">Cedula</label>
                            <input id="Cedula" type="text" name="txtCedula" class="input" required>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="group">
                                    <label for="PrimerNombre" class="label">Primer Nombre</label>
                                    <input id="PrimerNombre" type="text" name="txtPrimerNombre" class="input" required>
                                </div>
                            </div>

                            <div class="col">
                                <div class="group">
                                    <label for="SegundoNombre" class="label">Segundo Nombre</label>
                                    <input id="SegundoNombre" type="text" name="txtSegundoNombre" class="input">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="group">
                                    <label for="PrimerApellido" class="label">Primer Apellido</label>
                                    <input id="PrimerApellido" type="text" name="txtPrimerApellido" class="input" required>
                                </div>
                            </div>

                            <div class="col">
                                <div class="group">
                                    <label for="SegundoApellido" class="label">Segundo Apellido</label>
                                    <input id="SegundoApellido" type="text" name="txtSegundoApellido" class="input" required>
                                </div>
                            </div>
                        </div>
                        <div class="group">
                            <label for="Telefono" class="label">Telefono</label>
                            <input id="Telefono" type="text" name="txtTelefono" class="input" required>
                        </div>
                        <div class="group">
                            <label for="Correo" class="label">Correo</label>
                            <input id="Correo" type="email" name="txtCorreo" class="input" required>
                        </div>
                        <div class="group">
                            <label for="Password" class="label">Password</label>
                            <input id="Password" type="Password" name="txtPassword" class="input" required>
                        </div>
                        <div class="group">
                        </div>

                        <div class="group">
                            <label for="Rol" class="label">Tipo de Rol</label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                            <label class="form-check-label" for="flexRadioDefault1">
                                Condómino
                            </label>
                        </div>
                        <div class="group">
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                            <label class="form-check-label" for="flexRadioDefault2">
                                Oficial de Seguridad
                            </label>
                        </div>

                        <div class="group">
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="Guardar Persona">
                        </div>
              
                    </div>
                </div>
            </div>
        </form>
    </div>  
</body>
