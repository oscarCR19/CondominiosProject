@{
	ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="/css/Style.css">
<body>
	<div class="text-center">
		<h1 class="display-4" style="color: white">Crear Visita</h1>
	</div>
	<div class="login-wrap">
		<form asp-controller="Visitas" asp-action="CreateVisita">
			<div class="login-html">
				<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Crear Visita</label>

				<div class="login-form">
					<div class="sign-in-htm">
						
						<div class="group">
							<label for="Nombre" class="label">Nombre</label>
							<input id="Nombre" type="text" name="txtNombre" class="input" required>
						</div>

						<div class="group">
							<label for="Nombre" class="label">Apellido</label>
							<input id="Nombre" type="text" name="txtApellido" class="input" required>
						</div>

						<div class="group">
							<label for="Nombre" class="label">Placa</label>
							<input id="Nombre" type="text" name="txtPlaca" class="input" required>
						</div>
						
						
						<div class="group">
							<label for="Color" class="label">Color Vehiculo</label>
							<input id="Color" type="text" name="txtColor" class="input" required>
						</div>
						<div class="group">
							<label for="Fecha" class="label">Fecha Visita</label>
							<input type="date" name="txtFecha" class="input" required>
						</div>

						<div class="group">
							<input type="submit" class="button" value="Guardar Visita">
						</div>

					</div>
				</div>
			</div>
		</form>
	</div>
</body>

