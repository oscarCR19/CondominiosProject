<link rel="stylesheet" href="/css/Style.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<body>
    <div class="text-center">
        <h1 class="display-4" style="color: white">Editar Oficiales</h1>
    </div>
    <div class="login-wrap">
        <form asp-action="SavePerson" asp-controller="CondominosPerson" method="POST">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Editar Personas</label>

                @if (@ViewBag.Message == "Algunos valores ya estan en uso")
                {
                    <div class="alert alert-danger" role="alert">
                        <p>Ha ocurrido un error en el ingreso de la información, algunos datos ya se encuentran en uso</p>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }


                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="Cedula" class="label">Cedula</label>
                            <input id="Cedula" type="text" name="txtCedula" class="input" value="@ViewBag.Person.Ced" required>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="group">
                                    <label for="PrimerNombre" class="label">Primer Nombre</label>
                                    <input id="PrimerNombre" type="text" name="txtPrimerNombre" class="input" value="@ViewBag.Person.FirstName" required>
                                </div>
                            </div>

                            <div class="col">
                                <div class="group">
                                    <label for="SegundoNombre" class="label">Segundo Nombre</label>
                                    <input id="SegundoNombre" type="text" name="txtSegundoNombre" class="input" value="@ViewBag.Person.MiddleName">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="group">
                                    <label for="PrimerApellido" class="label">Primer Apellido</label>
                                    <input id="PrimerApellido" type="text" name="txtPrimerApellido" class="input" value="@ViewBag.Person.LastName1" required>
                                </div>
                            </div>

                            <div class="col">
                                <div class="group">
                                    <label for="SegundoApellido" class="label">Segundo Apellido</label>
                                    <input id="SegundoApellido" type="text" name="txtSegundoApellido" class="input" value="@ViewBag.Person.LastName2" required>
                                </div>
                            </div>
                        </div>
                        <div class="group">
                            <label for="Telefono" class="label">Telefono</label>
                            <input id="Telefono" type="text" name="txtTelefono" class="input" value="@ViewBag.Person.Phone" required>
                        </div>
                        <div class="group">
                            <label for="Correo" class="label">Correo</label>
                            <input id="Correo" type="email" name="txtCorreo" class="input" value="@ViewBag.Person.Email" required>
                        </div>
                        <div class="group">
                            <label for="Password" class="label">Password</label>
                            <input id="txtPassword" type="password" name="txtPassword" class="input" value="@ViewBag.Person.Password" required>
                        </div>
                        <div class="group">
                        </div>

                        


                        <!--Este input es para guardar el id y pasarlo el controlador para guardar la persona segun el id-->
                        <input type="text" name="txtIdPerson" value="@ViewBag.Person.Id" />
                        <!--Este input es para guardar el ido del rol de manera static-->
                        <input type="text" name="txtIdRol" value="3" />


                        <div class="group">
                            <input type="submit" class="button" value="Guardar Persona">
                        </div>

                    </div>
                </div>
            </div>


        </form>
    </div>
</body>
