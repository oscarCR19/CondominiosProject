@{
    ViewData["Title"] = "Error";
}
<style>
     .card {
         margin: 0 auto;
         box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
         transition: 0.3s;
         width: 40%;
         border-radius: 5px;
     }

     .text-danger{
        margin: 0 auto;
     }

     .btn-primary{
         margin: 0 auto;
     }

         .card:hover {
             box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
         }

     .avatar {
         margin: 0px 300px 0px;
         border-radius: 5px 5px 0 0;
     }

    .card-img-top {
        border-radius: 5px 5px 0 0;
        height: auto;
        width: auto;
     }

     .container {
         padding: 2px 16px;
     }

</style>

<body>
    <div class="card mb-3 text-center" style="width: 18rem">
        <img class="card-img-top" src="/img/alert.jpg" alt="Card image cap">
      <div class="card-body">
            <h1 class="text-danger">@ViewBag.Error.Title</h1>
            <h1 class="text-danger">@ViewBag.Error.ErrorMessage</h1>
            <hr />
            <a href="@ViewBag.Error.Path" class="btn btn-primary">Return Login</a>
      </div>
    </div>
</body>

